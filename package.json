{
  "name": "h3-valibot",
  "type": "module",
  "version": "0.0.9",
  "description": "ðŸ¤– Schema validation for h3 using Valibot",
  "author": "Conner Bachmann <github@conner-bachmann.de>",
  "license": "MIT",
  "keywords": [
    "h3",
    "valibot",
    "validation"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    },
    "./helpers": {
      "types": "./dist/helpers.d.mts",
      "default": "./dist/helpers.mjs"
    },
    "./nuxt": {
      "types": "./dist/nuxt.d.mts",
      "default": "./dist/nuxt.mjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "release": "pnpm test && pnpm build && changelogen --patch && git push --follow-tags && pnpm publish",
    "test": "pnpm lint && pnpm test:types && vitest --run",
    "test:types": "tsc --noEmit --skipLibCheck"
  },
  "peerDependencies": {
    "@nuxt/kit": ">=3",
    "@nuxt/schema": ">=3",
    "valibot": ">=1"
  },
  "peerDependenciesMeta": {
    "@nuxt/kit": {
      "optional": true
    },
    "@nuxt/schema": {
      "optional": true
    }
  },
  "dependencies": {
    "confbox": "^0.2.2",
    "h3": "^1.15.3",
    "valibot": "^1.1.0"
  },
  "optionalDependencies": {
    "@nuxt/kit": "^3.17.4",
    "@nuxt/schema": "^3.17.4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "4.13.2",
    "@types/node": "^22",
    "@types/serve-handler": "6.1.4",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "8.32.1",
    "@typescript-eslint/parser": "8.32.1",
    "changelogen": "^0.6.1",
    "eslint": "^9.27.0",
    "supertest": "^7.1.1",
    "typescript": "^5.8.3",
    "unbuild": "^3.5.0",
    "vite": "6.3.5",
    "vitest": "^3.1.4"
  }
}
